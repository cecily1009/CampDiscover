<%- include ("../partials/header") %>
<div class="row">
    <h2 style="text-align: center">Edit <%= user.username %>'s profile</h2>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/users/<%= user._id %>?_method=PUT" method="post">
          <div class="form-group">
            <img id="avatar" src="<%= user.avatar %>" alt="user profile image">
            <input class="form-control" type="text" name="user[avatar]" value="<%= user.avatar %>">
          </div>
            <div class="form-group">
              <label for="username">Username</label>
                <input class="form-control" type="text" name="user[username]" value="<%= user.username %>">
            </div>

            <div class="form-group">
              <label for="lastname">Lastname</label>
              <input class="form-control" type="text" name="user[lastName]" value="<%= user.lastName %>">
            </div>
            <div class="form-group">
              <label for="firstname">Firstname</label>
              <input class="form-control" type="text" name="user[firstName]" value="<%= user.firstName %>">
            </div>
            <div class="form-group">
              <label for="resetLink">Linked Email</label>
              <input class="form-control" type="email" name="user[resetLink]" value="<%= user.resetLink %>">
            </div>
            <div class="form-group">
              <label for="resetLink">About me</label>
              <textarea name="user[introduction]" rows="8" cols="55"><%= user.introduction %></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Save</button>
            </div>
        </form>
        <a href="/users/<%= user._id %>">Go Back</a>
    </div>
</div>
<%- include ("../partials/footer") %>
