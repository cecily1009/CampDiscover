<%- include ("partials/header") %>

<div class="row">
    <h1 style="text-align: center">Reset password</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/reset/<%= token %>" method="post">
          <div class="form-group">
            <label for="newpw">New Password</label>
            <input autofocus class="form-control" type="password" name="newpw" placeholder="new password">
          </div>
          <div class="form-group">
            <label for="confirmpw">Confirm Password</label>
            <input autofocus class="form-control" type="password" name="confirmpw" placeholder="confirm password">
          </div>

          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Update Password</button>
          </div>
        </form>
      </div>
</div>
<%- include ("partials/footer") %>
